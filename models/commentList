const mongoose = require('mongoose');

const commentListSchema = new mongoose.Schema({
    username :{
        required:true,
        type:String
    },
    comment :{
        required:true,
        type : String
    },
    timestamp :{
        required:true,
        type : Date,
        default : Date.now
    },
    videoID : {
        type : mongoose.Schema.Types.ObjectId, ref : 'videoThumbnailList'

    }
    
})

module.exports = mongoose.model('CommentList', commentListSchema)